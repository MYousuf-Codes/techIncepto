# Firebase Client SDK Configuration (for browser-side auth and Firestore)
# Get these values from your Firebase project settings > General > Your apps > Web app
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# Firebase Admin SDK Configuration (for server-side operations)
# Get these values from Firebase Console > Project Settings > Service accounts > Generate new private key
FIREBASE_ADMIN_PROJECT_ID=your_project_id_here
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
Your_Private_Key_Here_With_Newlines_Preserved
-----END PRIVATE KEY-----"

# Admin Authentication Configuration
# Generate a secure random string for JWT signing (32+ characters recommended)
ADMIN_JWT_SECRET=your_very_secure_random_string_here_32_chars_plus
# Session duration in seconds (86400 = 24 hours, 604800 = 7 days)
ADMIN_SESSION_MAX_AGE=86400

# Environment Configuration
NODE_ENV=development